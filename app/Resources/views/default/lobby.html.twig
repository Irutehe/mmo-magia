{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('collapsable.css') }}" xmlns=""/>
{% endblock %}
{% block body %}
    <div id="timer">

    </div>
    <div style="width:60%;float: left;">
        {% for lobbyCharacter in lobby.lobbyCharacters %}
            <div style="width: 45%;float:left;height:400px;">
                <div style="width:30%; float:left;">
                    <img src="{{ '/characters/'~ lobbyCharacter.character.picture }}" style="width: 95%;cursor: pointer;" onclick = "alert('Lasa tatele;')"/>
                </div>
                <div style="width: 60%;float:left;">
                    <table style="width: 100%;" border="1">
                        <tr>
                            <td colspan="2">{{ lobbyCharacter.nickname }}</td>
                        </tr>
                        <tr>
                            <td>Type</td>
                            <td>{{ lobbyCharacter.character.type }}</td>
                        </tr>
                        <tr>
                            <td>Health</td>
                            <td>{{ lobbyCharacter.character.health }}</td>
                        </tr>
                        <tr>
                            <td>Strength</td>
                            <td>{{ lobbyCharacter.character.strength }}</td>
                        </tr>
                        <tr>
                            <td>Defence</td>
                            <td>{{ lobbyCharacter.character.defence }}</td>
                        </tr>
                        <tr>
                            <td>Speed</td>
                            <td>{{ lobbyCharacter.character.speed }}</td>
                        </tr>
                        <tr>
                            <td>Luck</td>
                            <td>{{ lobbyCharacter.character.luck }}</td>
                        </tr>
                        <tr>
                            <td>Skills</td>
                            {% for skill in lobbyCharacter.character.skills %}
                                <td>{{ skill.name }}</td>
                            {% endfor %}
                        </tr>
                    </table>
                </div>
            </div>
        {% endfor %}
    </div>
    <div style="width: 30%;z-index: 10;  position: absolute;  right: 0;  top: 0;">
        <ul>
            {% for index, battleLog in battles %}
                <li><input type="checkbox" id="cb{{ index }}"/><label for="cb{{ index }}">Battle {{ index }}</label>
                    <ul>
                        {% for message in battleLog %}
                            <li style="text-align:center; font-size: 20px;">{{ message }}</li>
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
    </div>
    <script>
        var countDownDate = new Date("{{ endTime }}").getTime();
        // Update the count down every 1 second
        var x = setInterval(function () {

            // Get todays date and time
            var now = new Date().getTime();

            // Find the distance between now an the count down date

            var distance = countDownDate - now;

            // Time calculations for days, hours, minutes and seconds
            var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            var seconds = Math.floor((distance % (1000 * 60)) / 1000);

            // Output the result in an element with id="demo"
            document.getElementById("timer").innerHTML = hours + "h " + minutes + "m " + seconds + "s ";

            // If the count down is over, write some text
            if (distance < 0) {
                clearInterval(x);
                document.getElementById("timer").innerHTML = '<button type="button" onclick="startBattle(); disableButton(this);">Start battle </button>';
            }
        }, 1000);

        function startBattle() {
            var xmlhttp = new XMLHttpRequest();
            xmlhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    window.location.href='{{ path('lobby') }}';
                }
            };
            xmlhttp.open("GET", '{{ path('battle') }}', true);
            xmlhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
            xmlhttp.send();
        }
        function disableButton(object){
            object.disabled = true;
        }
    </script>

{% endblock %}
